APP_ENV=production
LOG_LEVEL=info
WORK_DIR=/workspace/jobs
TMP_DIR=/workspace/tmp

MAX_JOB_SECONDS=28800
STAGE_TIMEOUT_DOWNLOAD=1800
STAGE_TIMEOUT_PROCESS=25200
STAGE_TIMEOUT_UPLOAD=1800
CLEANUP_TEMP=true
KEEP_INTERMEDIATES=false

MAX_INPUT_GB=20
ALLOW_HTTP_INPUT=false
ALLOWED_EXTENSIONS=mp4,mov,mkv,avi,mpeg,mpg,m4v

DEFAULT_TARGET_RES=2048x1080
DEFAULT_CODEC=h265
DEFAULT_CONTAINER=mp4
DEFAULT_CRF_H265=20
DEFAULT_CRF_H264=18
DEFAULT_PRESET=medium
KEEP_AUDIO=true
AUDIO_CODEC=aac
AUDIO_BITRATE=192k

DEFAULT_DEINTERLACE=auto
DEFAULT_DENOISE=35
DEFAULT_SHARPEN=20
DEFAULT_MODEL=realesrgan-x2plus
UPSCALE_FACTOR=2

# Exposure / dark footage defaults
DEFAULT_BRIGHTNESS=0.0             # range -1.0..1.0
DEFAULT_GAMMA=1.0                  # range 0.6..1.8
DEFAULT_CONTRAST=1.0               # range 0.5..1.5
DEFAULT_AUTO_EXPOSURE=false
AUTO_EXPOSURE_STRENGTH=0.35        # conservative
HIGHLIGHT_PROTECT=0.85             # conservative highlight protection
SHADOW_LIFT_LIMIT=0.25             # cap shadow lift to avoid washout

S3_ENDPOINT=https://<your-endpoint>
S3_REGION=<your-region>
S3_BUCKET=<your-bucket>
S3_ACCESS_KEY_ID=<key>
S3_SECRET_ACCESS_KEY=<secret>
S3_OUTPUT_PREFIX=vhs2k/
S3_USE_SSL=true
S3_SIGNED_URL_TTL_SEC=604800

WEBHOOK_URL=
WEBHOOK_SECRET=
